            $(document).ready(()=>{
                $( ".elementContainer", $("#shortcuts") ).draggable({
                    // cancel: "a.ui-icon", // clicking an icon won't initiate dragging
                    revert: "invalid", // when not dropped, the item will revert back to its initial position
                    containment: "document",
                    helper: "clone",
                    cursor: "move"
                });

                // join link to group
                $(".uriGroup").droppable({
                    accept: "#shortcuts .container > .elementContainer",
                    classes: {
                        "ui-droppable-active": "ui-state-highlight"
                    },
                    drop: async function( event, ui ) {
                        var origin=$(ui.draggable[0]).parent().parent()[0];
                        var target=event.target;
                        var elementCopy=ui.draggable[0];

                        // if($(target).attr("type")=="group"){
                            await $(target).children(".container").append(elementCopy);
                        // }
                    }
                });

                // remove link from group
                $("#shortcuts").droppable({
                    accept: ".uriGroup .container > .elementContainer",
                    classes: {
                        "ui-droppable-active": "ui-state-highlight"
                    },
                    drop: async function( event, ui ) {
                        var origin=$(ui.draggable[0]).parent().parent()[0];
                        var target=event.target;
                        var elementCopy=ui.draggable[0];

                        await $(event.target).children(".container").append(elementCopy);
                        // $(ui.draggable[0]).remove();
                        if($(origin).find(".container").children().length==0){
                            document.getElementById("#sndFX-pop").play();
                            $(origin).remove();
                        }
                    }
                });
            });
        </script>
